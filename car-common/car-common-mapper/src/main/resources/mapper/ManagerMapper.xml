<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zb.mapper.ManagerMapper">

    <select id="getManagerById" resultType="com.zb.entity.Manager">
        select
                mId as mId,
                mName as mName,
                mPwd as mPwd,
                mEmail as mEmail,
                mPicture as mPicture
        from manager
        <trim prefix="where" prefixOverrides="and | or">
            <if test="id != null">
                and id=#{id}
            </if>
        </trim>
    </select>

    <select id="getManagerListByMap" resultType="com.zb.entity.Manager" parameterType="java.util.Map">
        select
                mId as mId,
                mName as mName,
                mPwd as mPwd,
                mEmail as mEmail,
                mPicture as mPicture
        from manager
        <trim prefix="where" prefixOverrides="and | or">
                <if test="mId != null and mId!=''">
                    and mId=#{mId}
                </if>
                <if test="mName != null and mName!=''">
                    and mName=#{mName}
                </if>
                <if test="mPwd != null and mPwd!=''">
                    and mPwd=#{mPwd}
                </if>
                <if test="mEmail != null and mEmail!=''">
                    and mEmail=#{mEmail}
                </if>
                <if test="mPicture != null and mPicture!=''">
                    and mPicture=#{mPicture}
                </if>
        </trim>
        <if test="beginPos != null and pageSize != null ">
            limit #{beginPos},#{pageSize}
        </if>
    </select>

    <select id="getManagerCountByMap" resultType="Integer"  parameterType="java.util.Map">
        select count(*) from manager
        <trim prefix="where" prefixOverrides="and | or">
                <if test="mId != null and mId!=''">
                    and mId=#{mId}
                </if>
                <if test="mName != null and mName!=''">
                    and mName=#{mName}
                </if>
                <if test="mPwd != null and mPwd!=''">
                    and mPwd=#{mPwd}
                </if>
                <if test="mEmail != null and mEmail!=''">
                    and mEmail=#{mEmail}
                </if>
                <if test="mPicture != null and mPicture!=''">
                    and mPicture=#{mPicture}
                </if>
        </trim>
    </select>

    <insert id="insertManager" parameterType="com.zb.entity.Manager">
        insert into manager(
                        mId,
                        mName,
                        mPwd,
                        mEmail,
                        mPicture)
        values(
                     #{mId},
                     #{mName},
                     #{mPwd},
                     #{mEmail},
                    #{mPicture})
    </insert>

    <update id="updateManager" parameterType="com.zb.entity.Manager">
        update manager
        <trim prefix="set" suffixOverrides="," suffix="where id=#{id}">
                        <if test="mId != null and mId!=''">
                            mId=#{mId},
                        </if>
                        <if test="mName != null and mName!=''">
                            mName=#{mName},
                        </if>
                        <if test="mPwd != null and mPwd!=''">
                            mPwd=#{mPwd},
                        </if>
                        <if test="mEmail != null and mEmail!=''">
                            mEmail=#{mEmail},
                        </if>
                        <if test="mPicture != null and mPicture!=''">
                            mPicture=#{mPicture}
                        </if>
        </trim>
    </update>
</mapper>